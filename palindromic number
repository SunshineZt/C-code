

#include<stdio.h>

#include<stdlib.h>

int main(){

    int m,n,z;

    int i;

    scanf("%d",&n);

    m=n;

    z=0;

    for(i=0;n>0;i++){

        z=z*10+n%10;

        n/=10;

    }

    printf("%d\n",i);

    if(z==m){

        printf("true");

            }

    else    printf("false");

    return 0;

} 

 

 

